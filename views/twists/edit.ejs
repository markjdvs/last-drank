<div class="row">
  <div class="col-sm-6">
    <form method="POST" action="/cocktails/<%= cocktail.id %>/twists" enctype="multipart/form-data">

      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" id="name" value="<%= twist.name %>">
      </div>

      <div class="form-group">
       <label for="recipe">Recipe</label>
       <textarea class="form-control" name="recipe" id="recipe" aria-describedby="recipeHelp" rows="4"><%= twist.recipe %></textarea>
       <small id="recipeHelp" class="form-text text-muted">Please include ingredients and their measures.</small>
      </div>

      <div class="form-group">
        <label for="image">Upload an image</label>
        <input type="file" class="form-control-file" name="image" id="image" aria-describedby="fileHelp">
        <small id="fileHelp" class="form-text text-muted">Delicious pics of delicious peeps' twists.</small>
      </div>

      <input type="hidden" name="mainSpirit[name]" value="">
      <input type="hidden" name="mainSpirit[image]" value="">
      <input type="hidden" name="mainSpirit[price]" value="">
      <input type="hidden" name="mainSpirit[tpnb]" value"">

      <button type="submit" class="btn btn-primary">Bop it.</button>
    </form>
  </div>

  <div class="col-sm-6">
    <h5>What's that badboy made with?</h5>
    <form class="tesco">
      <label for="mainSpirit"></label>
      <input type="text" name="mainSpirit" value="">
      <button class="searchTesco">Search</button>
    </form>
  </div>

</div>
