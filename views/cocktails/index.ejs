<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="0">
  <div class="carousel-inner content" role="listbox">
    <% cocktails.forEach((cocktail) => { %>
        <div class="carousel-item <% if(cocktail===cocktails[0]) { %> active <% } %>" style='background-image: url("/assets/images/<%= cocktail.image %>")'>
          <a href="/cocktails/<%= cocktail.id %>" class="d-block img-fluid">
            <h2 class='cocktailName'><%= cocktail.name %></h2>
          </a>
        </div>
    <% }) %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>

  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

</div>
