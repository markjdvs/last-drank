<div class="row">
  <div class="col-sm-6">
    <img class="img-fluid" src="/assets/images/<%= cocktail.image %>" alt="<%= cocktail.name %>">
  </div>
  <div class="col-sm-6">
    <h2><%= cocktail.name %></h2>
    <p>
      <h4><%= cocktail.sweet %></h4>
      <h4><%= cocktail.tart %></h4>
      <h4><%= cocktail.bitter %></h4>
    </p>
    <p>
      <%= cocktail.recipe %>
    </p>
  </div>
</div>

<div class="row">
  <h2>Twists</h2>
  <% cocktail.twists.forEach((twist) => { %>
    <h2><%= twist.name %></h2>
    <small>Made by <%= twist.createdBy.username %></small>
    <p>
      <%= twist.recipe %>
    </p>
    <p>
      <%= twist.sweet %>
      <%= twist.tart %>
      <%= twist.bitter %>
    </p>
    <% if(locals.isAuthenticated && twist.madeBy(user)) { %>
      <form method="POST" action="/cocktails/<%= cocktail.id %>/twists/<%= twist.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <button>Delete</button>
      </form>
    <% } %>
  <% }) %>
</div>

<div class="row">
  <h4>Twist it!</h4>
  <form method="POST" action="/cocktails/<%= cocktail.id %>/twists">
    <input type="text" name="name" placeholder="Name">
    <input type="text" name="image" placeholder="Image File">
    <textarea name="recipe" id="recipe" placeholder="Recipe"></textarea>

    <label for="sweet">Sweet</label>
    <select name="sweet">
      <option type="number" name="sweet" value="0">0</option>
      <option type="number" name="sweet" value="1">1</option>
      <option type="number" name="sweet" value="2">2</option>
    </select>
    <label for="tart">Tart</label>
    <select name="tart">
      <option type="number" name="tart" value="0">0</option>
      <option type="number" name="tart" value="1">1</option>
      <option type="number" name="tart" value="2">2</option>
    </select>
    <label for="bitter">Bitter</label>
    <select name="bitter">
      <option type="number" name="bitter" value="0">0</option>
      <option type="number" name="bitter" value="1">1</option>
      <option type="number" name="bitter" value="2">2</option>
    </select>
    <button class="button">Add a Twist</button>
  </form>
</div>
